{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "es2016"
    ],
    "rootDir": "src",
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@Shared/*": [
        "src/Shared/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}